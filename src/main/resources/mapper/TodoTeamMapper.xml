<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.repository.TodoTeamMapper">

    <resultMap id="todoTeamResultMap" type="org.example.domain.TodoTeamMapping">
        <id column="id" property="id" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_deleted" property="isDeleted" />
        <collection property="todoId" ofType="org.example.domain.Todo">
            <id column="id" property="id" />
            <result column="category_id" property="categoryId" />
            <result column="created_at" property="createdAt" />
            <result column="updated_at" property="updatedAt" />
            <result column="is_deleted" property="isDeleted" />
        </collection>
        <collection property="teamId" ofType="org.example.domain.Team">
            <id column="id" property="id" />
            <result column="created_at" property="createdAt" />
            <result column="updated_at" property="updatedAt" />
            <result column="is_deleted" property="isDeleted" />
        </collection>
    </resultMap>

    <insert id="createTodoTeam" parameterType="java.lang.Long">
        insert into todo_team_mapping
            (todo_id, team_id)
        values (#{todoId}, #{teamId})
    </insert>

    <update id="softDelete">
        update todo_team_mapping set
                                     is_deleted = #{isDeleted}
        where id = #{id}
    </update>

</mapper>